{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "lib/types",
		"target": "es5",
		"module": "es2015",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"typeRoots": ["node_modules/@types"],
		"outDir": "src-js",
		"noImplicitAny": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
